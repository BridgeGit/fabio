            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />

                <category android:name="com.lottomatica.gev" />
            </intent-filter>
        </receiver>
        <service android:name="com.lottomatica.gev.pushnotification.GcmIntentService" />
-->
        <activity
            android:name="com.lottomatica.gev.activities.SplashScreen"
            android:screenOrientation="portrait"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
            <intent-filter>
                <data android:scheme="gev" />

                <category android:name="android.intent.category.DEFAULT" />
                <category android:name="android.intent.category.BROWSABLE" />

                <action android:name="android.intent.action.VIEW" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.lottomatica.gev.activities.VetrinaActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.lottomatica.gev.activities.GiocoActivity"
            android:hardwareAccelerated="false" />
		<activity 
            android:name="com.lottomatica.gev.activities.JLotteryActivity"
            android:configChanges="keyboardHidden|orientation"/>
        <meta-data
            android:name="CHECKVERSION_URL"
            android:value="@CHECKVERSION_URL@" />

        <meta-data
            android:name="LOG"
            android:value="@LOG@" />

        <meta-data
            android:name="CLIENT"
            android:value="@CLIENT@" />
    </application>

</manifest>
